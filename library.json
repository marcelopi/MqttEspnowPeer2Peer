{
    "name": "MqttEspnowPeer2Peer",
    "version": "1.0.22",
    "keywords": "espnow, mqtt, esp32, esp8266, iot, peer-to-peer, communication, router, master, peer, slave",
    "description": "Library for peer-to-peer communication between ESP devices using ESP-NOW and MQTT. Router (ESP32 Only) | Peer (ESP32/ESP8266). Support development: https://github.com/sponsors/marcelopi",
    "authors": {
      "name": "Marcelo Pimentel",
      "email": "marcelo-pimentel@hotmail.com",
      "url": "https://github.com/marcelopi",
      "maintainer": true
    },
    "repository": {
      "type": "git",
      "url": "https://github.com/marcelopi/MqttEspNowPeer2Peer.git"
    },
    "sponsor": "https://github.com/sponsors/marcelopi",
    "export": {
      "include": [
        "src/*",
        "examples/*",
        "docs/*"
      ]
    },
    "frameworks": ["arduino"],
    "platforms": ["espressif32", "espressif8266"],
    "build": {
      "srcFilter": [
        "+<*.cpp>",
        "+<src/EspNowPeer.cpp>",
        "+<src/wifiConnManager.cpp>",
        "+<src/NtpManager.cpp>",
        {
          "exclude": ["src/MqttEspNowRouter.cpp", "src/NtpHelper.cpp"],
          "platforms": "espressif8266"
        }
      ]
    },
    "headers": [
      "src/EspNowPeer.h",
      "src/wifiConnManager.h",
      "src/NtpManager.h",
      "src/MqttEspNowRouter.h",
      "src/NtpHelper.h"
    ],
    "dependencies": [
      {
        "name": "ArduinoOTA",
        "version": "*"
      },
      {
        "name": "arduino-libraries/NTPClient",
        "version": "^3.2.1"
      },
      {
        "name": "esphome/AsyncTCP-esphome",
        "version": "^2.1.3",
        "platforms": "espressif32"
      },
      {
        "name": "heman/AsyncMqttClient-esphome",
        "version": "^2.1.0",
        "platforms": ["espressif32", "espressif8266"]
      },
      {
        "name": "paulstoffregen/Time1",
        "version": "^1.6.1",
        "platforms": ["espressif32", "espressif8266"]
      }
    ],
    "examples": [
      "examples/Peer/*",
      "examples/Router/*"
    ]
  }
  